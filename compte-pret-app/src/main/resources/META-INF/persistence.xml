<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://jakarta.ee/xml/ns/persistence
             http://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Configuration pour WildFly avec JTA -->
    <persistence-unit name="ComptePretPU" transaction-type="JTA">

        <jta-data-source>java:jboss/datasources/BanqueCP</jta-data-source>

        <class>com.compte_pret.entity.ComptePret</class>
        <class>com.compte_pret.entity.MvtStatutComptePret</class>
        <class>com.compte_pret.entity.Remboursement</class>
        <class>com.compte_pret.entity.StatutComptePret</class>
        <class>com.compte_pret.entity.TypePaiement</class>
        <!-- Propriétés Hibernate pour WildFly -->
        <properties>
            <!-- Dialect PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            
            <!-- Stratégie de génération du schéma - validation seulement -->
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            
            <!-- Désactiver la génération des contraintes de clé étrangère -->
            <property name="hibernate.hbm2ddl.create_namespaces" value="false"/>
            <property name="hibernate.hbm2ddl.halt_on_error" value="false"/>
            
            <!-- Affichage des requêtes SQL -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Configuration des logs -->
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Configuration du cache de second niveau (optionnel) -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
            
            <!-- Configuration de la validation -->
            <property name="hibernate.validator.apply_to_ddl" value="false"/>
            
            <!-- Configuration JTA pour WildFly -->
            <property name="hibernate.transaction.jta.platform" value="org.hibernate.engine.transaction.jta.platform.internal.JBossAppServerJtaPlatform"/>
        </properties>
    </persistence-unit>
</persistence>